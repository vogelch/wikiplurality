{{extend 'layout.html'}}
<p>You searched for property <i>{{=request.vars.properties}}</i> in instances of <i>{{=request.vars.instance_of}}</i></p>

{{response.files.append(URL('static','css/web2py-bootstrap4.css'))}}
{{include 'web2py_ajax.html'}}

<p>Analysis of prevalence of items exhibiting plurality per property:</p>
{{table = data}}
{{=TABLE(*table, _style='width:30%', _class='table', _id=0)}}

{{items_list = items}}
<p>Items exhibiting plurality:</p>
<table width="100%" class="table">
    <thead>
        <tr>
            <th class="">Item</th>
            <th class="">Property</th>
            <th class="">Statements</th>
    	</tr>
    </thead>
    <tbody>
    {{if len(items_list) == 0:}}
        <tr>
            <td colspan=4 align=middle><br>No items found</td></tr>
    {{else:}}
        {{for item in items_list:}}
            <tr>
                <td class="">{{=item[0]}}</td>
                <td class="">{{=item[1]}}</td>
                <td class="">
                    <ul>
                    {{for statement in item[2]:}}
                        <li>{{=statement}}</li>
                    {{pass}}
                    </ul>
                </td>
            </tr>
        {{pass}}
    {{pass}}
    </tbody>
</table>
